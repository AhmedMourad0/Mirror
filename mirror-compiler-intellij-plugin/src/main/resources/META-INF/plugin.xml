<idea-plugin>
    <id>com.ahmedmourad.mirror.mirror-compiler-intellij-plugin</id>
    <name>Mirror Compiler</name>
    <vendor email="dev.ahmedmourad73744@gmail.com" url="https://www.ahmedmourad.com">Ahmed Mourad</vendor>

    <description><![CDATA[
    A Kotlin compiler plugin that facilitates using data classes as value-based classes.<br>
    <a href="https://github.com/AhmedMourad0/Mirror">Visit on Github</a>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action class="com.ahmedmourad.mirror.intellij.SimpleAction" id="SimpleAction"
                text="Say Hello To Kotlin">
            <add-to-group group-id="ToolsMenu"/>
            <add-to-group group-id="WelcomeScreen.QuickStart"/>
        </action>
    </actions>
</idea-plugin>
