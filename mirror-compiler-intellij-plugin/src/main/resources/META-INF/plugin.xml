<idea-plugin>
    <id>com.ahmedmourad.mirror.mirror-compiler-intellij-plugin</id>
    <name>Mirror Compiler</name>
    <vendor email="dev.ahmedmourad73744@gmail.com" url="https://www.ahmedmourad.com">Ahmed Mourad</vendor>

    <description><![CDATA[
    A Kotlin compiler plugin that facilitates using data classes as value-based classes.<br>
    <a href="https://github.com/AhmedMourad0/Mirror">Visit on Github</a>
    ]]></description>

    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <syntheticResolveExtension
                implementation="com.ahmedmourad.mirror.intellij.MirrorIdeSyntheticResolveExtension"
                order="first"
        />
        <!--        <gradleProjectImportHandler implementation="com.ahmedmourad.mirror.intellij.MirrorGradleProjectImportHandler" />-->
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <lang.inspectionSuppressor
                language="kotlin"
                implementationClass="com.ahmedmourad.mirror.intellij.DataPrivateConstructorInspectionSuppressor"
                order="first"
        />
    </extensions>

</idea-plugin>
