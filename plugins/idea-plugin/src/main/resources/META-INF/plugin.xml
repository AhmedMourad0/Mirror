<idea-plugin>
    <id>dev.ahmedmourad.nocopy.idea-plugin</id>
    <name>Kotlin NoCopy</name>
	<version>0.2.0</version>
    <vendor email="dev.ahmedmourad73744@gmail.com">Ahmed Mourad</vendor>

    <description><![CDATA[
    The IDEA plugin for no-copy, a Kotlin compiler plugin that enables using data classes as value-based classes.<br>
    <a href="https://github.com/AhmedMourad0/no-copy">Visit on Github</a>
    ]]></description>

    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <syntheticResolveExtension
                implementation="dev.ahmedmourad.nocopy.idea.extensions.NoCopyIdeSyntheticResolveExtension"
                order="first"
        />
    </extensions>

    <extensions defaultExtensionNs="com.intellij">

        <lang.inspectionSuppressor
                language="kotlin"
                implementationClass="dev.ahmedmourad.nocopy.idea.suppressors.DataClassPrivateConstructorInspectionSuppressor"
        />

        <localInspection
                language="kotlin"
                displayName="NoCopy: Using multiple no-copy annotations on the same data class."
                groupPath="Kotlin"
                groupBundle="messages.InspectionsBundle"
                groupKey="group.names.probable.bugs"
                enabledByDefault="true"
                level="ERROR"
                suppressId="NoCopyAnnotationConflict"
                shortName="NoCopyAnnotationConflict"
                implementationClass="dev.ahmedmourad.nocopy.idea.inspections.AnnotationConflictInspection"
        />

        <localInspection
                language="kotlin"
                displayName="NoCopy: no-copy annotations can only be applied to data classes."
                groupPath="Kotlin"
                groupBundle="messages.InspectionsBundle"
                groupKey="group.names.probable.bugs"
                enabledByDefault="true"
                level="ERROR"
                suppressId="NoCopyAnnotatedNonDataClass"
                shortName="NoCopyAnnotatedNonDataClass"
                implementationClass="dev.ahmedmourad.nocopy.idea.inspections.AnnotatedNonDataClassInspection"
        />

        <localInspection
                language="kotlin"
                displayName="NoCopy: Private data class constructor is exposed via the generated 'copy' method."
                groupPath="Kotlin"
                groupBundle="messages.InspectionsBundle"
                groupKey="group.names.probable.bugs"
                enabledByDefault="true"
                level="WARNING"
                suppressId="NoCopyDataClassPrivateConstructor"
                shortName="NoCopyDataClassPrivateConstructor"
                implementationClass="dev.ahmedmourad.nocopy.idea.inspections.DataClassPrivateConstructorInspection"
        />

        <localInspection
                language="kotlin"
                displayName="NoCopy: Mirroring internal constructors is not yet supported."
                groupPath="Kotlin"
                groupBundle="messages.InspectionsBundle"
                groupKey="group.names.probable.bugs"
                enabledByDefault="true"
                level="ERROR"
                suppressId="NoCopyInternalLeastVisibleConstructor"
                shortName="NoCopyInternalLeastVisibleConstructor"
                implementationClass="dev.ahmedmourad.nocopy.idea.inspections.InternalLeastVisibleConstructorInspection"
        />

    </extensions>

</idea-plugin>
