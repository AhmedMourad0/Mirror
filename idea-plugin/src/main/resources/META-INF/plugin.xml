<idea-plugin>
    <id>com.ahmedmourad.nocopy.idea-plugin</id>
    <name>NoCopy Compiler</name>
    <vendor email="dev.ahmedmourad73744@gmail.com" url="https://www.ahmedmourad.com">Ahmed Mourad</vendor>

    <description><![CDATA[
    The IDEA plugin for no-copy, a Kotlin compiler plugin that enables using data classes as value-based classes.<br>
    <a href="https://github.com/AhmedMourad0/NoCopy">Visit on Github</a>
    ]]></description>

    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <syntheticResolveExtension
                implementation="com.ahmedmourad.nocopy.idea.extensions.NoCopyIdeSyntheticResolveExtension"
                order="first"
        />
    </extensions>

    <extensions defaultExtensionNs="com.intellij">

        <lang.inspectionSuppressor
                language="kotlin"
                implementationClass="com.ahmedmourad.nocopy.idea.suppressors.DataClassPrivateConstructorInspectionSuppressor"
        />

        <localInspection
                language="kotlin"
                displayName="NoCopy: Using multiple no-copy annotations on the same data class."
                groupPath="Kotlin"
                groupBundle="messages.InspectionsBundle"
                groupKey="group.names.probable.bugs"
                enabledByDefault="true"
                level="ERROR"
                implementationClass="com.ahmedmourad.nocopy.idea.inspections.AnnotationConflictInspection"
        />

        <localInspection
                language="kotlin"
                displayName="NoCopy: no-copy annotations can only be applied to data classes."
                groupPath="Kotlin"
                groupBundle="messages.InspectionsBundle"
                groupKey="group.names.probable.bugs"
                enabledByDefault="true"
                level="ERROR"
                implementationClass="com.ahmedmourad.nocopy.idea.inspections.AnnotatedNonDataClassInspection"
        />

        <localInspection
                language="kotlin"
                displayName="NoCopy: Private data class constructor is exposed via the generated 'copy' method."
                groupPath="Kotlin"
                groupBundle="messages.InspectionsBundle"
                groupKey="group.names.probable.bugs"
                enabledByDefault="true"
                level="WARNING"
                suppressId="NoCopyDataClassPrivateConstructor"
                shortName="NoCopyDataClassPrivateConstructor"
                implementationClass="com.ahmedmourad.nocopy.idea.inspections.DataClassPrivateConstructorInspection"
        />

    </extensions>

</idea-plugin>
